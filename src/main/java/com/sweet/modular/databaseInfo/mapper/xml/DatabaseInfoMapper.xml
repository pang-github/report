<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.sweet.modular.databaseInfo.mapper.DatabaseInfoMapper">    <!-- 通用查询映射结果 -->    <resultMap id="BaseResultMap" type="com.sweet.modular.databaseInfo.entity.DatabaseInfo">        <id column="id" property="id" />        <result column="db_name" property="dbName" />        <result column="jdbc_driver" property="jdbcDriver" />        <result column="user_name" property="userName" />        <result column="password" property="password" />        <result column="jdbc_url" property="jdbcUrl" />        <result column="create_time" property="createTime" />    </resultMap>    <!-- 通用查询结果列 -->    <sql id="Base_Column_List">        id, db_name, jdbc_driver, user_name, password, jdbc_url, create_time    </sql>    <select id="customPageList" resultType="com.sweet.modular.databaseInfo.entity.DatabaseInfo"            parameterType="com.sweet.modular.databaseInfo.entity.DatabaseInfo">        select        <include refid="Base_Column_List"/>        from database_info where 1 = 1       <if test="param.dbName != null and param.dbName != ''">        and db_name like concat('%',#{param.dbName},'%')       </if>    </select></mapper>