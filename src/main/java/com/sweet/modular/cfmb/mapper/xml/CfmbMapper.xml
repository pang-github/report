<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.sweet.modular.cfmb.mapper.CfmbMapper">    <!-- 通用查询映射结果 -->    <resultMap id="BaseResultMap" type="com.sweet.modular.cfmb.entity.Cfmb">    <result column="id" property="id" />        <result column="recipe_name" property="recipeName" />        <result column="recipe_details" property="recipeDetails" />        <result column="recipe_price" property="recipePrice" />    </resultMap>    <!-- 通用查询结果列 -->    <sql id="Base_Column_List">        id,        recipe_name, recipe_details, recipe_price    </sql>    <select id="customPageList" resultType="com.sweet.modular.cfmb.entity.Cfmb"            parameterType="com.sweet.modular.cfmb.entity.Cfmb">        select        <include refid="Base_Column_List"/>        from business_cfmb where 1 = 1       <if test="param.recipeName != null and param.recipeName != ''">        and recipe_name like concat('%',#{param.recipeName},'%')       </if>    </select></mapper>